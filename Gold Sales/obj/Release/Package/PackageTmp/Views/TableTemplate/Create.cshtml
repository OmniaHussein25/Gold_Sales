@model Gold_Sales.Models.City

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal form-label-left">
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="item form-group">
            @Html.LabelFor(model => model.CityID, htmlAttributes: new { @class = "col-form-label col-md-3 col-sm-3 label-align" })
            <div class="col-md-6 col-sm-6">
                @Html.EditorFor(model => model.CityID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CityID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="item form-group">
            @Html.LabelFor(model => model.CityName, htmlAttributes: new { @class = "col-form-label col-md-3 col-sm-3 label-align" })
            <div class="col-md-6 col-sm-6">
                @Html.EditorFor(model => model.CityName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CityName, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="item item form-group">
            <div class="col-md-6 col-sm-6 offset-md-3">
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-primary" })
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>

    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
