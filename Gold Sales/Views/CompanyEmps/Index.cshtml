        $("#loaderDiv").show();

        var compid = $("#hiddenId").val();

        $.ajax({

            type: "POST",
            url: "/CompanyEmps/DeleteObj",
            data: { id: compid },
            dataType: "json",
            success: function (result) {
                $("#loaderDiv").hide();
                $("#myModal").modal("hide");
                location.reload();

            },
            error: function (response) {
                alert("error!");
            }


        })

    }
</script>