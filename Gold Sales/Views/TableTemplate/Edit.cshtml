@model Gold_Sales.Models.City

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal form-label-left">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.CityID)



    <div class="item form-group">
        @Html.LabelFor(model => model.CityName, "City Name", htmlAttributes: new { @class = "col-form-label col-md-3 col-sm-3 label-align" })
        <div class="col-md-6 col-sm-6">
            @Html.EditorFor(model => model.CityName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CityName, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="item form-group">
        @Html.LabelFor(model => model.CountryName, "Country Name", htmlAttributes: new { @class = "col-form-label col-md-3 col-sm-3 label-align" })
        <div class="col-md-6 col-sm-6">
            @Html.EditorFor(model => model.CountryName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CountryName, "", new { @class = "text-danger" })
        </div>
    </div>



    @Html.Partial("~/Views/Shared/Partials/_FormButtons.cshtml")

</div>



}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

