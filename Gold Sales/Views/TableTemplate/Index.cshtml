@model IEnumerable<Gold_Sales.Models.City>

@{
    ViewBag.Title = "Table Template";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="x_content">
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">
                <p>
                    @Html.ActionLink("  Create New", "Create", null, new { @class = "btn btn-round btn-primary", @style = "Float:Right;" })

                </p>

                <div id="datatable_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap no-footer">
                    <div class="col-sm-12">
                        <table id="datatable" class="table table-striped table-bordered dataTable no-footer dtr-inline " style="width:100%">

                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CityID)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CityName)
                                    </th>

                                    <th></th>
                                </tr>
                            </thead>


                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CityID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CityName)
                                        </td>

                                        <td>
                                            @Html.ActionLink(" ", "Edit", new { id = item.CityID }, new { @class = "btn btn-round btn-warning glyphicon glyphicon-edit" })
                                            @Html.ActionLink(" ", "Details", new { id = item.CityID }, new { @class = "btn btn-round btn-info glyphicon glyphicon-info-sign" })
                                            @*@Html.ActionLink("Delete", "Delete", new { id = item.CityID }, new { @class = "btn btn-round btn-danger", onclick = "return confirm('Are sure wants to delete?');" })*@
                                            <a href="#" class="btn btn-round btn-danger glyphicon glyphicon-trash" onclick="ConfirmDelete(@item.CityID)"> </a>


                                        </td>
                                    </tr>



                                }


                            </tbody>
                        </table>


                    </div>
                </div>
                <!--------------->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="myModalLabel">Delete City</h4>
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <h4>Text in a modal</h4>
                        <p>Praesent commodo cursus magna, vel scelerisque nisl consectetur et. Vivamus sagittis lacus vel augue laoreet rutrum faucibus dolor auctor.</p>
                        <p>Aenean lacinia bibendum nulla sed consectetur. Praesent commodo cursus magna, vel scelerisque nisl consectetur et. Donec sed odio dui. Donec ullamcorper nulla non metus auctor fringilla.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
                <!------------>
                <div class="modal fade" id="myModal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <a href="#" class="close" data-dismiss="modal">&times;</a>
                                <h3 class="modal-title" style="float:left">Delete City</h3>
                            </div>
                            <div class="modal-body">
                                <h4>
                                    Are you sure You want to delete this item ?!
                                </h4>



                            </div>
                            <div class="modal-footer">
                                <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                                <a href="#" class="btn btn-success" onclick="DeleteCity()">Confirm</a>
                            </div>

                        </div>

                    </div>

                </div>


                <input type="hidden" id="hiddenCityId" />
            </div>
        </div>

    </div>
</div>




<script>

    var ConfirmDelete = function (id) {

        $("#hiddenCityId").val(id);
        $("#myModal").modal('show');

    }

    var DeleteCity = function () {
        //debugger

        $("#loaderDiv").show();

        var cityid = $("#hiddenCityId").val();

        $.ajax({

            type: "POST",
            url: "/TableTemplate/DeleteCity",
            data: { id: cityid },
            dataType: "json",
            success: function (result) {
                $("#loaderDiv").hide();
                $("#myModal").modal("hide");
                location.reload();

            },
            error: function (response) {
                alert("error!");  
            }


        })

    }
</script>