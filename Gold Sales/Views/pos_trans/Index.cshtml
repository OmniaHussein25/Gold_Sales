    var DeleteObj = function () {
        //debugger

        $("#loaderDiv").show();

        var cstid1 = $("#hiddenId1").val();
        var cstid2 = $("#hiddenId2").val();
        $.ajax({

            type: "POST",
            url: "/pos_trans/DeleteObj",
            data: { id: cstid1, cstid2 },
            dataType: "json",
            success: function (result) {
                $("#loaderDiv").hide();
                $("#myModal").modal("hide");
                location.reload();

            },
