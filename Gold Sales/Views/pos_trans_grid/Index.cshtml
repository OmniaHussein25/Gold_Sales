        //debugger

        $("#loaderDiv").show();

        var cityid = $("#hiddenId").val();

        $.ajax({

            type: "POST",
            url: "/TableTemplate/DeleteObj",
            data: { id: cityid },
            dataType: "json",
            success: function (result) {
                $("#loaderDiv").hide();
                $("#myModal").modal("hide");
                location.reload();

            },
            error: function (response) {
                alert("error!");
            }


        })

    }
</script>
