<script>

    var ConfirmDelete = function (id) {

        $("#hiddenId").val(id);
        $("#myModal").modal('show');

    }

    var DeleteObj = function () {
        //debugger

        $("#loaderDiv").show();

        var currencyid = $("#hiddenId").val();

        $.ajax({

            type: "POST",
            url: "/CurrencyRates/DeleteObj",
            data: { id: currencyid },
            dataType: "json",
            success: function (result) {
                $("#loaderDiv").hide();
                $("#myModal").modal("hide");
                location.reload();

            },
            error: function (response) {
                alert("error!");
            }


        })

    }
</script>